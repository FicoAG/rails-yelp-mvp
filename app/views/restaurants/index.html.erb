<div class="container my-5">
  <h2 class="text-center text-secondary"> List of Restaurants</h2>
  <div class="text-right">
  <%= link_to 'Add Restaurant', new_restaurant_path, class: "btn btn-primary" %>
  </div>
  <hr>
  <div class="row d-flex justify-content-center text-center">
    <% @restaurants.each do |restaurant|%>
     <div class="col-3 card m-1 p-3">
      <div class="text-secondary">
        <p><%= restaurant.name %></p>
        <p><%= restaurant.category %></p>
        <p><%= restaurant.address %></p>
        <p><%= restaurant.phone_number %></p>
        <%= link_to 'Details', restaurant_path(restaurant), class: "btn btn-outline-primary rounded" %>
      </div>
    </div>
  <% end %>
</div>
</div>
